<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/points"
            android:onClick="point"
            android:layout_marginLeft="20dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="0"
            android:textSize="70dp"
            />

        <RadioGroup
            android:layout_marginLeft="160dp"
            android:layout_width="150dp"
            android:layout_height="170dp"
            >

            <RadioButton
                android:id="@+id/speed1"
                android:onClick="speed1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="speed 2000" />

            <RadioButton
                android:id="@+id/speed2"
                android:onClick="speed2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="speed 1500" />

            <RadioButton
                android:id="@+id/speed3"
                android:onClick="speed3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="speed 1000" />
        </RadioGroup>
    </LinearLayout>

    <ImageView
        android:id="@+id/emoji"
        android:onClick="point"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/emoji" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/start"
            android:onClick="start"
            android:layout_marginTop="50dp"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:textSize="30dp"
            android:text="start"/>

        <Button
            android:id="@+id/stop"
            android:onClick="stop"
            android:layout_marginTop="50dp"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:textSize="30dp"
            android:text="stop"/>

    </LinearLayout>
</LinearLayout>